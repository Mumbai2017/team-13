<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unmadesai.newmaw.donor_reg">
    <TextView
        android:id="@+id/Dname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textColor="#005eff"
        android:fontFamily="monospace"                               
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignBaseline="@+id/etName"
        android:layout_alignBottom="@+id/etName"
        android:layout_alignLeft="@+id/Dadd"
        android:layout_alignStart="@+id/Dadd" />

    <TextView
        android:id="@+id/Dphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact : "
        
        android:textColor="#005eff"
        android:fontFamily="monospace"
        tools:layout_editor_absoluteY="113dp"
        tools:layout_editor_absoluteX="36dp"
        android:layout_alignBaseline="@+id/etPhone"
        android:layout_alignBottom="@+id/etPhone"
        android:layout_alignLeft="@+id/Dname"
        android:layout_alignStart="@+id/Dname" />

    <TextView
        android:id="@+id/Demail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email address : "
        tools:layout_editor_absoluteY="201dp"
        tools:layout_editor_absoluteX="36dp"
        android:textColor="#005eff"
        android:fontFamily="monospace"                              
        android:layout_alignBaseline="@+id/etMail"
        android:layout_alignBottom="@+id/etMail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/Dadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address : "
        
        android:textColor="#005eff"
        android:fontFamily="monospace"
        tools:layout_editor_absoluteY="277dp"
        tools:layout_editor_absoluteX="36dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/Demail"
        android:layout_alignEnd="@+id/Demail"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        
        android:textColor="#005eff"
        android:fontFamily="monospace"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="387dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter name"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Demail"
        android:layout_toEndOf="@+id/Demail"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="Enter number"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="101dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/etName"
        android:layout_alignLeft="@+id/etName"
        android:layout_alignStart="@+id/etName" />

    <EditText
        android:id="@+id/etMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Enter email address"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="192dp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/etAdd"
        android:layout_alignLeft="@+id/etPhone"
        android:layout_alignStart="@+id/etPhone" />

    <EditText
        android:id="@+id/etAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter address"
        android:inputType="textPostalAddress"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="267dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/etMail"
        android:layout_alignStart="@+id/etMail" />


</RelativeLayout>
