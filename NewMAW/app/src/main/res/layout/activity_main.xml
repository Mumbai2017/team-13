<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f7eb"
    android:orientation="horizontal"
    tools:context="com.example.unmadesai.newmaw.MainActivity"
    >


    <ImageView
        android:layout_width="368dp"
        android:layout_height="350dp"
        android:src="@mipmap/wish"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnVolunteer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:backgroundTint="#25ced1"
        android:text="Volunteer"
        android:onClick="volunteer"
        android:layout_gravity="center"

        android:background="#005eff"
        android:textColor="#ffffff"
        android:layout_marginLeft="-330dp"
        android:layout_alignBottom="@+id/btnDonor"
        android:layout_toRightOf="@+id/btnDonor"
        android:layout_toEndOf="@+id/btnDonor" />

    <Button
        android:id="@+id/btnDonor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONOR"
        android:layout_gravity="center"
        android:layout_marginLeft="85dp"
        android:background="#25ced1"
        android:textColor="#ffffff"
        android:layout_marginStart="85dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
