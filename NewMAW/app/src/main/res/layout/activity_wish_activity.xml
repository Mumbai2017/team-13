<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unmadesai.newmaw.wish_activity">


    <TextView
        android:id="@+id/tvCity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="45dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btnCity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:text="Button"
        
        android:background="#005eff"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/tvCity1"
        android:layout_alignBottom="@+id/tvCity1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvCity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:text="TextView"
        android:layout_below="@+id/tvCity3"
        android:layout_alignLeft="@+id/tvCity1"
        android:layout_alignStart="@+id/tvCity1" />

    <Button
        android:id="@+id/btnCity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_alignBaseline="@+id/tvCity3"
        android:layout_alignBottom="@+id/tvCity3"
        android:layout_alignLeft="@+id/btnCity1"
        android:layout_alignStart="@+id/btnCity1" 
        
        android:background="#005eff"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tvCity3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="TextView"
        android:layout_below="@+id/btnCity1"
        android:layout_alignLeft="@+id/tvCity2"
        android:layout_alignStart="@+id/tvCity2" />

    <Button
        android:id="@+id/btnCity3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_alignBaseline="@+id/tvCity2"
        android:layout_alignBottom="@+id/tvCity2"
        android:layout_alignLeft="@+id/btnCity2"
        android:layout_alignStart="@+id/btnCity2" 
        
        android:background="#005eff"
        android:textColor="#ffffff"/>




</RelativeLayout>
