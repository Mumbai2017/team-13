<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shreekara.mawteam13.MainActivity">


    <TextView
        android:id="@+id/Dname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignBaseline="@+id/Dnameval"
        android:layout_alignBottom="@+id/Dnameval"
        android:layout_alignLeft="@+id/Dadd"
        android:layout_alignStart="@+id/Dadd" />

    <TextView
        android:id="@+id/Dphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact number : "
        tools:layout_editor_absoluteY="113dp"
        tools:layout_editor_absoluteX="36dp"
        android:layout_alignBaseline="@+id/Dphoneval"
        android:layout_alignBottom="@+id/Dphoneval"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Demail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email address : "
        tools:layout_editor_absoluteY="201dp"
        tools:layout_editor_absoluteX="36dp"
        android:layout_alignBaseline="@+id/Demailval"
        android:layout_alignBottom="@+id/Demailval"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Dadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address : "
        tools:layout_editor_absoluteY="277dp"
        tools:layout_editor_absoluteX="36dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/Demail"
        android:layout_alignEnd="@+id/Demail"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="387dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <EditText
        android:id="@+id/Dnameval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter name"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Dphone"
        android:layout_toEndOf="@+id/Dphone" />

    <EditText
        android:id="@+id/Dphoneval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="Enter number"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="101dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/Dnameval"
        android:layout_alignLeft="@+id/Demailval"
        android:layout_alignStart="@+id/Demailval" />

    <EditText
        android:id="@+id/Demailval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Enter email address"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="192dp"
        android:layout_above="@+id/Daddval"
        android:layout_toRightOf="@+id/Dphone"
        android:layout_toEndOf="@+id/Dphone"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/Daddval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter address"
        android:inputType="textPostalAddress"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="267dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/Demailval"
        android:layout_alignStart="@+id/Demailval" />

</RelativeLayout>


